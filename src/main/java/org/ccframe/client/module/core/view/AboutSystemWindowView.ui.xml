<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
	xmlns:cc="urn:import:org.ccframe.client.components"
	xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
>
	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="rowMargins">
		<ui:attributes top="5" right="5" bottom="0" left="5" />
	</ui:with>
	<ui:with type="com.sencha.gxt.core.client.util.Padding" field="vBoxPaddings">
		<ui:attributes top="5" right="15" bottom="5" left="15" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData" field="vBoxLayoutData">
		<ui:attributes margins="{rowMargins}"/>
	</ui:with>
	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="centerMargins">
		<ui:attributes top="8" right="5" bottom="7" left="5" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData"
		field="centerData">
		<ui:attributes margins="{centerMargins}" />
	</ui:with>
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData"
		field="fillSidesData">
		<ui:attributes flex="1" />
	</ui:with>
	
		<!--上 右 下 左 -->
	<ui:style>
	.aboutSystem{
		padding-left:50px;
		overflow: auto;
	}
	.circle{
		background-color: #DDDDDD;
	    border-radius: 50%;
	    color: #404040;
	    font-size: 21px;
	    height: 80px;
	    line-height: 80px;
	    margin-left: 15px;
	    text-align: center;
	    width: 80px;
	    float: left;
	}
	.rectangle{
		background-color: #00ccff;
	    margin-left: 25px;
		margin-bottom: 25px;
		padding-bottom:10px;
	    border-radius: 10px;
	    width: 280px;
	    float: left;
	}
	.rectangle li {
		border: medium none;
	    color: #FFFFFF;
	    font-size: 15px;
	    height: auto;
	    line-height: 30px;
	    margin: 5px 0 0 30px;
	    text-align: left;
	}
	</ui:style>

	<gxt:Window ui:field="window" height="580" width="550" modal="true" headingText="关于本系统" focusWidget="{closeButton}" buttonAlign="CENTER" bodyStyle="background-color: 0xFFF;  text-align:center;">
			<g:HTMLPanel styleName="{style.aboutSystem}">
				<ul style="list-style: none outside none;">
					<li style="padding-left:75px;margin-top:20px">
						<div><font color="blue" size="15px"><b>团&nbsp;&nbsp;队&nbsp;&nbsp;介&nbsp;&nbsp;绍</b></font></div>
					</li>
					<li style="height:50px;margin-top:35px">
						<g:HTMLPanel styleName="{style.circle}">吴进</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>项目职位：技术总监</li>
								<li>项目工作：项目指导</li>
							</ul>
						</g:HTMLPanel>
					</li>
					
						<div>&nbsp;<br/></div>
					
					<li style="height:30px;margin-top:30px">
						<g:HTMLPanel styleName="{style.circle}">梁诗敏</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>所在班级：14系统理论</li>
								<li>项目职位：设计师</li>
								<li>项目工作：负责需求策划、UI设计、需求说明书和项目原型的编写</li>
							</ul>
						</g:HTMLPanel>
					</li>
					<li>
						<div>&nbsp;</div>
					</li>
					
					<li style="height:30px">
						<g:HTMLPanel styleName="{style.circle}">梅阳阳</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>所在班级：16系统理论</li>
								<li>项目职位：开发工程师</li>
								<li>项目工作：负责药品信息、药品盘库的功能模块</li>
							</ul>
						</g:HTMLPanel>
					</li>
					<li>
						<div>&nbsp;</div>
					</li>
					<li style="height:30px">
						<g:HTMLPanel styleName="{style.circle}">丘默悦</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>所在班级：13计本</li>
								<li>项目职位：开发工程师</li>
								<li>项目工作：负责物品信息、人员挂号的功能模块</li>
							</ul>
						</g:HTMLPanel>
					</li>
					<li>
						<div>&nbsp;</div>
					</li>
					<li style="height:30px">
						<g:HTMLPanel styleName="{style.circle}">翁楚钦</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>所在班级：14软件</li>
								<li>项目职位：开发工程师</li>
								<li>项目工作：负责人员档案、医生问诊流程的功能模块</li>
							</ul>
						</g:HTMLPanel>
					</li>	
					<li>
						<div>&nbsp;</div>
					</li>
					<li style="height:30px">
						<g:HTMLPanel styleName="{style.circle}">周金明</g:HTMLPanel>
						<g:HTMLPanel styleName="{style.rectangle}">
							<ul style="list-style: none outside none;">
								<li>所在班级：14软件</li>
								<li>项目职位：开发工程师</li>
								<li>项目工作：负责护士站治疗的功能模块</li>
							</ul>
						</g:HTMLPanel>
					</li>
														
				</ul>
		</g:HTMLPanel>
		<gxt:button>
			<button:TextButton ui:field="closeButton" text="退出"/>
		</gxt:button>
	</gxt:Window>

</ui:UiBinder> 